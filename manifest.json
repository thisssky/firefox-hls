{
	"manifest_version": 2,
	"name": "HLS",
	"description": "HLS",
	"version": "0.0.7",
	"developer": {
		"name": "qq1217268470",
		"url": "https://github.com/1217268470/firefox-hls"
	},
	"icons": {
		"64": "icons/icon.png"
	},
	"applications": {
		"gecko": {
			"id": "hls@hls.org"
		}
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"nativeMessaging",
		"devtools",
		"downloads",
		"geolocation",
		"notifications",
		"tabs",
		"activeTab",
		"storage",
		"unlimitedStorage",
		"history",
		"menus",
		"contextMenus",
		"find"
	],
	"background": {
		"scripts": ["background/background.js"]
	},
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"browser_style": true,
		"default_title": "HLS"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content-script.js"]
		}
	]
}